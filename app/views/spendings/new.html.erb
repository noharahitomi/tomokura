<header>
  <%= render partial:'layouts/header' %>
</header>
<main>
  <%= form_with model: @spending, url: spendings_path, local: true do |form| %>
    
    <div class="form">
      <%= form.label "支払ったユーザ" %>
      <%= form.collection_select(:account_id, Account.all, :id, :name, {}, {class:"account-select"}) %>
    </div>

    <div class="form">
      <%= form.label "日付" %>
      <%= form.date_select :arrival_date, class: "date"%>

    <div class="form">
      <%= form.label "カテゴリーを選択" %>
      <%= form.collection_select(:shopping_category_id, ShoppingCategory.all, :id, :name, {}, {class:"shopping-category--select"}) %>
    </div>
    
    <div class="form">
      <%= form.label "￥" %>
      <%= form.text_field :amount %>
    </div>

    <div class="form">
      <%= form.label "備考欄" %>
      <%= form.text_area :content %>
    </div>

    <div class="form-btn">
      <%= form.submit "登録", class: "btn" %>
    </div>
  <% end %>
</main>